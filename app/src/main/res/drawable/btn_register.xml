<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/white"/>
            <stroke android:width="0.5dp" android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/primary_dark"/>
            <stroke android:width="0.5dp" android:color="@color/primary_dark"/>
        </shape>
    </item>
</selector>