<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.fivefire.app.gdutcontacts.widget.dialpad.searchview.DeletableEditText
        android:id="@+id/et"
        android:gravity="center"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_larger"
        android:inputType="none"
        android:textIsSelectable="true"
        app:clean_icon="@drawable/ic_backspace_black_24dp"
        app:tint_color="@color/accent"
        />
    <TableLayout
        android:id="@+id/container"
        android:stretchColumns="0,1,2"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_marginTop="@dimen/spacing_normal"
            >
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords=""
                app:number="1"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="ABC"
                app:number="2"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="DEF"
                app:number="3"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/spacing_normal"
            >
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="GHI"
                app:number="4"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="JKL"
                app:number="5"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="MNO"
                app:number="6"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/spacing_normal"
            >
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="PQRS"
                app:number="7"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="TUV"
                app:number="8"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords="WXYZ"
                app:number="9"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/spacing_normal"
            >
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords=""
                app:number="*"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords=""
                app:number="0"
                />
            <com.fivefire.app.gdutcontacts.widget.dialpad.ninekeybutton.NineKeyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_dark"
                app:keywords=""
                app:number="#"
                />
        </TableRow>
    </TableLayout>
    <FrameLayout
        android:layout_marginLeft="@dimen/spacing_more_huge"
        android:layout_marginRight="@dimen/spacing_more_huge"
        android:paddingBottom="@dimen/spacing_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:contentDescription="@string/send_msg"
            android:id="@+id/bt_send_msg"
            android:src="@drawable/ic_message_black_24dp"
            android:background="@drawable/bg_ripple_dark"
            android:layout_gravity="start"
            android:layout_width="@dimen/image_more_large"
            android:layout_height="@dimen/image_more_large"
            />
        <ImageButton
            android:contentDescription="@string/call"
            android:id="@+id/bt_call"
            android:src="@drawable/ic_phone_black_24dp"
            android:scaleType="center"
            android:background="@drawable/bg_ripple_light"
            android:layout_gravity="center"
            android:layout_width="@dimen/image_more_large"
            android:layout_height="@dimen/image_more_large"
            />
        <ImageButton
            android:contentDescription="@string/hide"
            android:id="@+id/bt_hide"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:scaleType="center"
            android:background="@drawable/bg_ripple_dark"
            android:layout_gravity="end"
            android:layout_width="@dimen/image_more_large"
            android:layout_height="@dimen/image_more_large"
            />
    </FrameLayout>
</LinearLayout>