<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="70dp"
    android:background="@drawable/shape_corner"
    android:gravity="center"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
          android:layout_alignParentStart="true"
          android:layout_alignParentLeft="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:text="@string/name"
          android:textSize="24sp" />
      <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:id="@+id/edit_Name"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/bg_edittext"
          android:drawablePadding="10dp"
          android:drawableRight="@drawable/delete_select"
          android:inputType="text"
          android:textSize="24sp" />

  </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Sno"
            android:textSize="24sp" />
        <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_Sno"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/delete_select"
            android:inputType="text"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/edit_grade"
            android:textSize="24sp" />
        <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_Grade"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/delete_select"
            android:inputType="text"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/acadeny"
            android:textSize="24sp" />
        <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_Acadeny"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/delete_select"
            android:inputType="text"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Dno"
            android:textSize="24sp" />
        <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_Dno"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/delete_select"
            android:inputType="text"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Phone"
            android:textSize="24sp" />
        <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_Phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/delete_select"
            android:inputType="text"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Sphone"
            android:textSize="24sp"
            />
        <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_Sphone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/delete_select"
            android:inputType="text"
            android:textSize="24sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Note"
            android:textSize="24sp"
            />
        <com.fivefire.app.gdutcontacts.ui.common.ClearEditText
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/edit_Note"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start|top"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/delete_select"
            android:inputType="textMultiLine"
            android:textSize="24sp" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_edit_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_select"
        android:textSize="20sp"
        android:text="@string/confirm" />
</LinearLayout>
